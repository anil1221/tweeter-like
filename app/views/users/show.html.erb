<h1><%= @user.email %></h1>
<h1>Tweets</h1>
<% @tweets.each do |tweet| %>
  <%= link_to tweet.user.email, 'user_path' %> <br>
  <%= tweet.content %>
<% end %>

<% if current_user.following?(@user) %>
  <%= link_to 'unfollow', unfollow_path(@user.id), method: :delete %>
<% else %>
  <%= link_to 'follow', follow_path(@user.id), method: :post%>
<% end %>
